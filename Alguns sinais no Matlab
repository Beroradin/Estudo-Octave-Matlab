#Sinal Periodico Quadrado Continuo
A = 1;
w0 = 10*pi;
rho = 0.5;
t = 0:0.001:1 #amostragem de 1000Hz
sq = A*square(w0*t+rho);
plot (t, sq)
grid on
title('Sinal periódico quadrado')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')
axis([0 1.1 -1.1 1.1])

//////////////////////////////////////////////

#Sinal periodico quadrado discreto
A = 1;
omega = pi/4;
rho = 0.5;
n = -10:10;
x = A*square(omega*n + rho);
stem(n, x)
grid on
title('Sinal periódico quadrado')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')
axis([11 10 -1 1])


//////////////////////////////////////////////


#Sinal exponencial contínuo
B = 5;
a = 6; #se a é positivo, a exponencial será crescente, caso contrário, decrescente
t = 0:.001:1;
x = B*exp(a*t);
plot (t, x)
grid on
title('Sinal exponencial crescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')

//////////////////////////////////////////////

#Sinal exponencial discreto
B = 1;
r = 0.85;
n = -10:10;
x = B*r.^n; #exponencial decrescente
stem(n, x)
grid on
title('Sinal exponencial decrescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')

//////////////////////////////////////////////

#Sinal Senoidal Contínuo
A = 4;
w0 = 20*pi;
phi = pi/6;
t = 0:.001:1;
cosine = A*cos(w0*t + phi);
plot (t, cosine)
grid on
title('Sinal exponencial decrescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')
axis([0 1 -4.1 4.1])

//////////////////////////////////////////////

#Sinal Senoidal Discreto
A = 1;
omega = (2*pi)/12;
phi = 0;
n = -10:10;
y = A*cos(omega*n + phi);
stem(n, y, 'r')
grid on
title('Sinal exponencial decrescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')

//////////////////////////////////////////////

#Sinal Senoidal Exponencialmente Amortecido
A = 60;
w0 = 20*pi;
phi = 0;
a = 6;
t = 0:.001:1;
expsin = A*sin(W0*t + phi).*exp(-a*t);
plot(t, expsin)
grid on
title('Sinal exponencial decrescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')

