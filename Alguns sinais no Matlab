#Função Degrau
u = [zeros(1, 50), ones(1, 50)]

#Função Impulso
delta = [zeros(1, 49), 1 , zeros(1, 50)]

//////////////////////////////////////////////

#Impulso quadrado unitário de -0.5 até 0.5
t = -1:1/500:1;
u1 = [zeros(1, 250) , ones(1, 751)];
u2 = [zeros(1, 751) , ones(1, 250)];
u = u1 - u2;
plot(t, u)
grid on
title('Sinal exponencial decrescente')
set(gca,'fontsize',24)
xlabel('tempo')
ylabel('Amplitude')
axis([-1 1 -0.1 1.1])
